{
  "name": "com.philippe.schneider-thermostat",
  "version": "0.0.2",
  "main": "app.js",
  "private": true,
  "scripts": {
    "lint": "eslint .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "homey-zigbeedriver": "^2.1.0"
  },
  "devDependencies": {
    "eslint": "^9.39.2",
    "jest": "^29.7.0",
    "sharp": "^0.34.5"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "drivers/**/*.js",
      "app.js",
      "!**/node_modules/**",
      "!**/test/**",
      "!**/.homeybuild/**"
    ],
    "testMatch": [
      "**/test/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/.homeybuild"
    ]
  }
}
