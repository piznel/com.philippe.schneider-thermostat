{
  "id": "com.philippe.schneider-thermostat",
  "version": "0.0.1",
  "sdk": 3,
  "compatibility": ">=12.0.0",
  "author": {
    "name": "Philippe",
    "email": "philippe@example.com"
  },
  "name": {
    "en": "Schneider Thermostat (CCTFR6400)",
    "fr": "Thermostat Schneider (CCTFR6400)"
  },
  "description": {
    "en": "Zigbee driver for Schneider Electric thermostat.",
    "fr": "Driver Zigbee pour thermostat Schneider Electric."
  },
  "category": ["climate"],
  "brandColor": "#3DCD58",
  "permissions": [],
  "images": {
    "small": "/assets/images/small.png",
    "large": "/assets/images/large.png",
    "xlarge": "/assets/images/xlarge.png"
  },
  "capabilities": {
    "heating_demand": {
      "type": "number",
      "title": {
        "en": "Heating Demand",
        "fr": "Demande de chauffe"
      },
      "units": "%",
      "min": 0,
      "max": 100,
      "step": 1,
      "decimals": 0,
      "getable": true,
      "setable": true,
      "uiComponent": "slider",
      "icon": "/assets/icons/flame.svg"
    }
  },
  "drivers": [
    {
      "id": "schneider_thermostat",
      "name": {
        "en": "Schneider Thermostat (CCTFR6400)",
        "fr": "Thermostat Schneider (CCTFR6400)"
      },
      "class": "thermostat",
      "capabilities": [
        "measure_temperature",
        "measure_humidity",
        "measure_battery",
        "target_temperature",
        "heating_demand"
      ],
      "energy": {
        "batteries": ["AAA", "AAA"]
      },
      "zigbee": {
        "manufacturerName": "Schneider Electric",
        "productId": "Thermostat",
        "endpoints": {
          "1": {
            "clusters": [0, 1, 3, 32, 513, 516, 1026, 1029, 2821, 65027],
            "bindings": [0, 25, 513, 65027]
          }
        }
      },
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "images": {
        "small": "/drivers/schneider_thermostat/assets/images/small.png",
        "large": "/drivers/schneider_thermostat/assets/images/large.png"
      },
      "capabilitiesOptions": {
        "heating_demand": {
          "min": 0,
          "max": 100,
          "step": 1
        }
      }
    }
  ]
}
